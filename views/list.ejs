        }).catch((error)=>{

        })
*/
    </script>

    <script>
        //--SSE연결
        let eventSource = new EventSource('/stream/list')
        eventSource.addEventListener('msg',function(e){
            console.log(e.data)
            let 가져온거 = JSON.parse(e.data) //--key쪽에 ""가 붙어있음 => 문자열로 취급함 이걸 json으로 바꿔줌
            document.querySelector('.white-bg').insertAdjacentHTML("afterbegin",
            `<div class="list-box"><h4><a href="/detail/${가져온거._id}">${가져온거.title}</a></h4><p>${가져온거.content}</p></div>`)
        })
    </script>
</body>
</html>